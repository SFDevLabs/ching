extends auth

block auth
    br
    .col.col-lg-4
    .col.col-lg-8.center
      h3
        | Reset Your Password
      form.col.col-lg-4.form-horizontal(action="", method="post", role="form")
        input(type='hidden', name='_csrf', value="#{csrf_token}")
        p.col-sm-offset-2.error= message
        .form-group
          input#email.form-control(type="password", placeholder="New Password", name="password")
        .form-group
            button.btn.btn-primary(type='submit') Set New Password