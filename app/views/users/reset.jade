extends auth

block auth
  form.form-horizontal(action="/users/reset", method="post", role="form")
    input(type='hidden', name='_csrf', value="#{csrf_token}")

    p.col-sm-offset-2.error= message

    .form-group
      label.col-sm-2.control-label(for="email") Email
      .col-sm-10
        input#email.form-control(type="email", placeholder="Your Email", name="email")


    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-primary(type='submit') Send Rest Email
        | &nbsp; or &nbsp;
        a.show-signup(href="/signup") Sign up
        | &nbsp; or &nbsp;
        a.show-signup(href="/login") Login
