nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/', title="Ching") 
        span.logo
          img(src="/img/logo.png", alt="Ching")
        |  Ching
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(class=isActive('/articles/new') ? 'active' : '')
          a(href="/articles/new", title="New Invoice") 
            span.typcn.typcn-plus
              |  New
        - if (req.isAuthenticated() && !req.token)
          //- if the user has received any invoices
          li
            a(href="/", title="Invoices")
              span.typcn.typcn-document-text
              |  Invoices  
          
          if (req.countReceived>0)
            li
              a(href="/recieved", title="Recieved Invoices")
                span.typcn.typcn-mail
                strong 
                  | Inbox 
                strong='('+req.countReceived+')'
          else
            li
              a(href="/recieved", title="Recieved Invoices")
                span.typcn.typcn-mail
                |  Inbox 
          li
            a(href="/settings", title="Profile")
              span.typcn.typcn-user
              |  Settings
          li
            a(href="/logout", title="Logout")
              span.typcn.typcn-eject
              |  Logout
          //- li
          //-   a
          //-     span
          //-       |#{req.user.firstname} #{req.user.lastname}
        - else
          li(class=isActive('/login') ? 'active' : '')
            a(href="/login", title="Login") Login
